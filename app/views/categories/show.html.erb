<p style="color: green"><%= notice %></p>

<h1><%= @category.name %></h1>

<h2>Expenditures</h2>
<ul>
  <% @expenditure.each do |expense| %>
    <li>
      <strong>Name:</strong> <%= expense.name %>
      <br>
      <strong>Amount:</strong> <%= expense.amount %>
    </li>
  <% end %>
</ul>


<p><%= link_to 'Create Expense', new_category_expenditure_path(@category) %></p>
<%
=begin%>
 <div>
  <%= link_to "Edit this category", edit_category_path(@category) %> |
  <%= link_to "Back to categories", categories_path %>

  <%= button_to "Destroy this category", @category, method: :delete %>
</div> 
<%
=end%>

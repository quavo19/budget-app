<div class="home-container">
  <div class="flex-home">
    <% if user_signed_in? %>
      <p class="welcome">Welcome <%= current_user.name %> 👋🏽</p>
      <img src="https://cdn-icons-png.flaticon.com/512/520/520464.png" alt="Welcome image" class="logo-image">
      <div class="login-buttons">
      <%= link_to "Go To categories", categories_path, class: "btn btn-primary" %>
      <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary logout" %>
      </div>
    <% else %>
      <div class="welcome-logo">
      <h2 class="welcome">Welcome To Budget App</h2>
      <img src="https://cdn-icons-png.flaticon.com/512/295/295128.png" alt="Welcome image" class="logo-image">
      </div>
      <div class="login-buttons">
      <%= link_to "Log in", new_user_session_path, class: "btn btn-primary" %>
      <%= link_to "Sign up", new_user_registration_path, class: "btn " %>
      </div>
    <% end %>
  </div>
</div>